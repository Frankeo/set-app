{
  "name": "@set-app/main",
  "description": "Main repo",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Frankeo/set-app.git"
  },
  "scripts": {
    "publish:cli": "yarn workspace @set-app/cli publish --tag beta --access public",
    "ci": "turbo test lint check-format typecheck build",
    "pre-commit": "turbo test lint check-format typecheck",
    "postinstall": "husky install",
    "check-format": "prettier --check ."
  },
  "keywords": [
    "CRA",
    "setapp",
    "set-app",
    "setup",
    "Create",
    "React",
    "App"
  ],
  "author": "Francisco Moreno",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Frankeo/set-app/issues"
  },
  "homepage": "https://github.com/Frankeo/set-app#readme",
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "devDependencies": {
    "@commitlint/cli": "17.4.2",
    "@commitlint/config-conventional": "17.4.2",
    "commitizen": "4.3.0",
    "cz-conventional-changelog": "3.3.0",
    "husky": "8.0.0",
    "prettier": "2.7.1",
    "turbo": "^1.7.4"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  }
}
