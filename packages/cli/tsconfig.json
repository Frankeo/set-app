{
  "compilerOptions": {
    "lib": ["ES2022"],
    "target": "ES2022",
    "outDir": "dist",
    "rootDir": "src",
    "types": ["node"],
    "strict": true,
    "module": "ES2022",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "src/**/*.test.ts", "src/__test__/**"]
}
